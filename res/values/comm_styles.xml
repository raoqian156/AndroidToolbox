<?xml version="1.0" encoding="utf-8"?>
<!-- 公共样式 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ******************************************************************************** 布局 ************************************************************************************ -->
    <!-- 布局 - 正文 -->
    <style name="comm_layout_body" parent="@style/base_layout_fill_fill_vertical">
        <item name="android:id">@id/comm_layout_body</item>
        <item name="android:background">@color/comm_body_backg</item>
    </style>
    
    <!-- 布局 - 正文 - 内容 -->
    <style name="comm_layout_body_content" parent="@style/base_layout_fill_fill_vertical">
        <item name="android:id">@id/comm_layout_bodyContent</item>
    </style>
    
    <!-- 布局 - 正文  - 内容 - 有内边距-->
    <style name="comm_layout_body_content_padding" parent="@style/base_layout_fill_fill_vertical">
        <item name="android:id">@id/comm_layout_bodyContent</item>
        <item name="android:padding">@dimen/base_padding_specialLarge</item>
    </style>
    
	<!-- 布局 - 列表项 -->
	<style name="comm_layout_listItem" parent="@style/base_layout_fill_wrap">
	    <item name="android:minHeight">@dimen/comm_layout_listItem_minHeight</item>
	    <item name="android:paddingLeft">@dimen/base_padding_veryLarge</item>
	    <item name="android:paddingTop">@dimen/base_padding_littleSmall</item>
	    <item name="android:paddingRight">@dimen/base_padding_veryLarge</item>
	    <item name="android:paddingBottom">@dimen/base_padding_littleSmall</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	
	<!-- 布局 - 列表头和尾 -->
	<style name="comm_layout_listHeaderAndFooter" parent="@style/comm_layout_listItem">
	    <item name="android:clickable">true</item>
	</style>
    
    <!-- 布局 - 列表为空时的提示视图 -->
    <style name="comm_layout_listEmptyHint" parent="@style/base_layout_wrap_wrap">
        <item name="android:id">@id/comm_layout_listEmptyHint</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
	    <item name="android:gravity">center</item>  
	    <item name="android:clickable">true</item>
    </style>
    
    <!-- 布局 - 加载中提示 -->
    <style name="comm_layout_loadingHint" parent="@style/base_layout_fill_fill">
        <item name="android:id">@id/comm_layout_loadingHint</item>
        <item name="android:layout_gravity">center</item>
	    <item name="android:gravity">center</item> 
	    <item name="android:clickable">true</item>
         <item name="android:background">@color/comm_body_backg</item>
         <item name="android:visibility">gone</item>
    </style>
    
    
    
    
    
    <!-- ******************************************************************************** 列表 ************************************************************************************ -->
	<!-- 列表 -->
	<style name="comm_list" parent="@style/base_layout_fill_wrap">
	    <item name="android:id">@android:id/list</item>
	    <item name="android:divider">@drawable/list_divider</item>
	    <item name="android:cacheColorHint">@color/base_transparent</item>
	    <item name="android:fastScrollEnabled">true</item>
	</style>
    
	<!-- 列表 - 充满的 -->
	<style name="comm_list_fill" parent="@style/comm_list">
	    <item name="android:layout_height">fill_parent</item>
	</style>
    
	<!-- 列表 - 高度权重1 -->
	<style name="comm_list_weight" parent="@style/comm_list">
	    <item name="android:layout_height">0dp</item>
	    <item name="android:layout_weight">1</item>
	</style>
   
	<!-- 列表 - 有左右内边距 -->
	<style name="comm_list_padding" parent="@style/comm_list">
	    <item name="android:paddingLeft">@dimen/base_padding_specialLarge</item>
	    <item name="android:paddingRight">@dimen/base_padding_specialLarge</item>
	</style>
    
	<!-- 列表 - 充满的 - 有左右内边距 -->
	<style name="comm_list_fill_padding" parent="@style/comm_list_fill">
	    <item name="android:paddingLeft">@dimen/base_padding_specialLarge</item>
	    <item name="android:paddingRight">@dimen/base_padding_specialLarge</item>
	</style>
    
	<!-- 列表 - 高度权重1 - 有左右内边距 -->
	<style name="comm_list_weight_padding" parent="@style/comm_list_weight">
	    <item name="android:paddingLeft">@dimen/base_padding_specialLarge</item>
	    <item name="android:paddingRight">@dimen/base_padding_specialLarge</item>
	</style>
	
	
	
	
	
	<!-- ******************************************************************************** 文字 ************************************************************************************ -->	
	<!-- 文字 -->
	<style name="comm_text" parent="@style/base_layout_wrap_wrap">
	    <item name="android:textIsSelectable">true</item>
		<item name="android:textColor">@color/base_black</item>
		<item name="android:textSize">@dimen/base_textSize_default</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
	</style>
	
	<!-- 文字 - 宽度充满 -->
	<style name="comm_text_fill" parent="@style/comm_text">
	    <item name="android:layout_width">fill_parent</item>
	</style>
	
	<!-- 文字 - 宽度权重 -->
	<style name="comm_text_weight" parent="@style/comm_text">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_weight">1</item>
	</style>
	
	
	
	
	
	<!-- ******************************************************************************** 按钮 ************************************************************************************ -->
	<!-- 按钮 - 正文 -->
	<style name="comm_button_body" parent="@style/base_layout_wrap_wrap">
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/base_gray</item>
	    <item name="android:minWidth">@dimen/comm_button_body_minWidth</item>
	    <item name="android:minHeight">@dimen/comm_button_body_minHeight</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
        <item name="android:padding">@dimen/base_padding_large</item>
	</style>
	
	<!-- 按钮 - 正文 - 宽度充满 -->
	<style name="comm_button_body_fill" parent="@style/comm_button_body">
	    <item name="android:layout_width">fill_parent</item>
	</style>
	
	<!-- 按钮 - 正文 - 宽度权重 -->
	<style name="comm_button_body_weight" parent="@style/comm_button_body">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_weight">1</item>
	</style>
	
    <!-- 按钮 - 列表项 -->
    <style name="comm_button_listItem" parent="@style/base_layout_wrap_wrap">
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/base_gray</item>
		<item name="android:minWidth">@dimen/comm_button_listItem_minHeight</item>
		<item name="android:minHeight">@dimen/comm_button_listItem_minHeight</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
	    <item name="android:padding">@dimen/base_padding_default</item>
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
    </style>
    
    <!-- 按钮 - 列表项中的选择按钮 -->
    <style name="comm_button_listItem_choice" parent="@style/comm_button_listItem">
		<item name="android:clickable">false</item>
        <item name="android:id">@id/comm_button_listItemChoice</item>
    </style>
    
    
    
    
    
    <!-- ******************************************************************************** 编辑器 ************************************************************************************ -->
   <!-- 编辑器 -->
    <style name="comm_edit" parent="@style/base_layout_fill_wrap">
        <item name="android:background">@drawable/selector_edit</item>
        <item name="android:textSize">@dimen/base_textSize_default</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:minHeight">@dimen/comm_edit_minHeight</item>
        <item name="android:minWidth">@dimen/comm_edit_minWidth</item>
        <item name="android:padding">@dimen/base_padding_large</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- 编辑器 - 账号 -->
    <style name="comm_edit_account" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_account</item>
    </style>
    
    <!-- 编辑器 - 密码 -->
    <style name="comm_edit_password" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_password</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <!-- 编辑器 - 确认密码 -->
    <style name="comm_edit_confirmPassword" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_confirmPassword</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <!-- 编辑器 - 姓名 -->
    <style name="comm_edit_name" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_name</item>
    </style>
    
    <!-- 编辑器 - 手机号 -->
    <style name="comm_edit_mobileNumber" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_mobileNumber</item>
        <item name="android:maxLength">11</item>
        <item name="android:inputType">phone</item>
    </style>
    
    <!-- 编辑器 - 验证码 -->
    <style name="comm_edit_verifyCode" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_verifyCode</item>
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
    </style>
    
    <!-- 编辑器 - 邮箱 -->
    <style name="comm_edit_email" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    
    <!-- 编辑器 - 地区 -->
    <style name="comm_edit_area" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_area</item>
    </style>
    
    <!-- 编辑器 - 地址 -->
    <style name="comm_edit_address" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_address</item>
    </style>
    
    <!-- 编辑器 - 邮编 -->
    <style name="comm_edit_zipcode" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_zipcode</item>
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
    </style>
    
    <!-- 编辑器 - 公司名称 -->
    <style name="comm_edit_companyName" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_companyName</item>
    </style>
    
    <!-- 编辑器 - 身份证号 -->
    <style name="comm_edit_idNumber" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_idNumber</item>
        <item name="android:maxLength">18</item>
    </style>
</resources>